---
import Layout from "../layouts/Layout.astro";
import Chart from "../components/Chart.astro";

// Load all JSON files from data directory and get the latest one
const dataFiles = import.meta.glob("../data/*.json", { eager: true });
const sortedFiles = Object.entries(dataFiles)
  .filter(([path]) => /\/\d{4}-\d{2}-\d{2}\.json$/.test(path))
  .sort(([a], [b]) => b.localeCompare(a));

if (sortedFiles.length === 0) {
  throw new Error("No data files found");
}

const [latestPath, latestModule] = sortedFiles[0];
const data = latestModule as any;

const { grandTotals, reportDate, regions } = data.data;
const { allApplications, allApplicants } = grandTotals;

// Calculate key metrics
const occupied = allApplications.capacity - allApplications.freeSpots;
const occupancyPercent = ((occupied / allApplications.capacity) * 100).toFixed(
  2,
);
const applicantsPerSpot =
  allApplications.freeSpots > 0
    ? Math.round(allApplicants.active / allApplications.freeSpots)
    : allApplicants.active;
const avgApplicationsPerFacility = Math.round(
  allApplications.active /
    regions.reduce((acc, r) => acc + r.facilities.length, 0),
);

// Format numbers
const formatNumber = (num: number) => num.toLocaleString("sl-SI");

// Get facilities with free spots
const facilitiesWithSpots = regions.flatMap((r) =>
  r.facilities
    .filter((f) => f.freeSpots && f.freeSpots > 0)
    .map((f) => ({ ...f, region: r.name })),
);

// Load pricing data
const pricingFiles = import.meta.glob("../data/pricing/*.json", {
  eager: true,
});
const pricingData = Object.values(pricingFiles) as any[];

// Sort each facility's rooms by price (cheapest first)
pricingData.forEach((facility: any) => {
  facility.room_pricing.sort(
    (a: any, b: any) => a.monthly_rate - b.monthly_rate,
  );
});

// Get max number of room types across all facilities
const maxRooms = Math.max(
  ...pricingData.map((p: any) => p.room_pricing.length),
);

// Format currency
const formatCurrency = (num: number) =>
  num.toLocaleString("sl-SI", { style: "currency", currency: "EUR" });
---

<Layout>
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    <!-- Header -->
    <header class="text-center mb-12">
      <h1 class="text-3xl md:text-4xl font-bold mb-2">Domovi za starejše</h1>
      <p class="text-base-content/60">Pregled zasedenosti v Sloveniji</p>
      <p class="text-sm text-base-content/40 mt-2">
        Podatki z dne: {reportDate}
      </p>
    </header>

    <!-- Capacity Progress -->
    <div class="card bg-base-100 shadow-xl mb-8">
      <div class="card-body">
        <h2 class="card-title justify-center text-2xl mb-4">
          Zasedenost kapacitet
        </h2>

        <div class="text-center mb-4">
          <span class="font-bold text-5xl text-error">{occupancyPercent}%</span>
        </div>

        <!-- Visual blocks representation - Mobile (20 bars) -->
        <div class="flex gap-1 md:hidden">
          {
            Array.from({ length: 20 }).map((_, i) => (
              <div
                class={`flex-1 h-8 rounded ${i < Math.round(Number(occupancyPercent) / 5) ? "bg-error" : "bg-success"}`}
              />
            ))
          }
        </div>
        <!-- Visual blocks representation - Desktop (100 bars) -->
        <div class="hidden md:flex gap-1">
          {
            Array.from({ length: 100 }).map((_, i) => (
              <div
                class={`flex-1 h-8 rounded-sm ${i < Math.round(Number(occupancyPercent)) ? "bg-error" : "bg-success"}`}
              />
            ))
          }
        </div>

        <div class="flex justify-between text-sm mt-4 text-base-content/70">
          <span>Zasedeno: {formatNumber(occupied)}</span>
          <span>Kapaciteta: {formatNumber(allApplications.capacity)}</span>
        </div>
      </div>
    </div>

    <!-- Key Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
      <!-- Free Spots -->
      <div class="stat bg-base-100 rounded-box shadow">
        <div class="stat-figure text-success">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <div class="stat-title">Prosta mesta</div>
        <div class="stat-value text-success">
          {formatNumber(allApplications.freeSpots)}
        </div>
        <div class="stat-desc">
          od {formatNumber(allApplications.capacity)} skupaj
        </div>
      </div>

      <!-- Active Applications -->
      <div class="stat bg-base-100 rounded-box shadow">
        <div class="stat-figure text-warning">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            ></path>
          </svg>
        </div>
        <div class="stat-title">Aktivne prošnje</div>
        <div class="stat-value text-warning">
          {formatNumber(allApplications.active)}
        </div>
        <div class="stat-desc">
          {formatNumber(allApplications.registered)} vseh prijav
        </div>
      </div>

      <!-- Active Applicants -->
      <div class="stat bg-base-100 rounded-box shadow">
        <div class="stat-figure text-info">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
            ></path>
          </svg>
        </div>
        <div class="stat-title">Aktivni prosilci</div>
        <div class="stat-value text-info">
          {formatNumber(allApplicants.active)}
        </div>
        <div class="stat-desc">
          {formatNumber(allApplicants.registered)} vseh prosilcev
        </div>
      </div>
    </div>

    <!-- Critical Insight -->
    <div class="card bg-base-100 shadow-xl mb-8 border-l-4 border-error">
      <div class="card-body">
        <h2 class="card-title text-error">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          Ključni podatek
        </h2>
        <div class="text-center py-4">
          <p class="text-5xl font-bold text-error mb-2">
            {formatNumber(applicantsPerSpot)}
          </p>
          <p class="text-lg">aktivnih prosilcev na vsako prosto mesto</p>
        </div>
        <p class="text-base-content/70 text-center">
          Za {formatNumber(allApplications.freeSpots)} prostih mest trenutno čaka
          {formatNumber(allApplicants.active)} aktivnih prosilcev.
        </p>
      </div>
    </div>

    <!-- Additional Insights -->
    <div class="grid grid-cols-2 gap-4 mb-8">
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <h3 class="card-title text-sm">Prošenj na dom</h3>
          <p class="text-3xl font-bold">
            {formatNumber(avgApplicationsPerFacility)}
          </p>
        </div>
      </div>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <h3 class="card-title text-sm">Število domov</h3>
          <p class="text-3xl font-bold">
            {regions.reduce((acc, r) => acc + r.facilities.length, 0)}
          </p>
        </div>
      </div>
    </div>

    <Chart />

    <!-- Facilities with Free Spots -->
    {
      facilitiesWithSpots.length > 0 && (
        <div class="card bg-base-100 shadow-xl mb-8">
          <div class="card-body">
            <h2 class="card-title text-success">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
              Domovi s prostimi mesti
            </h2>
            <div class="overflow-x-auto">
              <table class="table table-zebra">
                <thead>
                  <tr>
                    <th>Dom</th>
                    <th>Regija</th>
                    <th class="text-right">Mesta</th>
                  </tr>
                </thead>
                <tbody>
                  {facilitiesWithSpots.map((f) => (
                    <tr>
                      <td>{f.name}</td>
                      <td>
                        <span class="badge badge-ghost">{f.region}</span>
                      </td>
                      <td class="text-right">
                        <span class="badge badge-success">{f.freeSpots}</span>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      )
    }

    <!-- Regional Breakdown -->
    <div class="card bg-base-100 shadow-xl mb-8">
      <div class="card-body">
        <h2 class="card-title mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Pregled po regijah
          </h2>
        <div class="space-y-2">
          {
            regions.map((region) => {
              const regionOccupied =
                region.totals.totalApplications.capacity -
                region.totals.totalApplications.freeSpots;
              const regionPercent = (
                (regionOccupied / region.totals.totalApplications.capacity) *
                100
              ).toFixed(1);
              const hasSpots = region.totals.totalApplications.freeSpots > 0;

              return (
                <div class="collapse collapse-arrow bg-base-200">
                  <input type="checkbox" />
                  <div class="collapse-title font-medium flex items-center gap-4">
                    <span
                      class={`badge ${hasSpots ? "badge-success" : "badge-error"}`}
                    >
                      {region.totals.totalApplications.freeSpots}
                    </span>
                    <span class="flex-1">{region.name}</span>
                    <span class="text-sm text-base-content/60">
                      {regionPercent}% zasedeno
                    </span>
                  </div>
                  <div class="collapse-content">
                    <div class="overflow-x-auto">
                      <table class="table table-sm">
                        <thead>
                          <tr>
                            <th>Tip</th>
                            <th>Ime</th>
                            <th class="text-right">Kapaciteta</th>
                            <th class="text-right">Prosto</th>
                            <th class="text-right">Aktivne prošnje</th>
                          </tr>
                        </thead>
                        <tbody>
                          {region.facilities.map((f) => (
                            <tr>
                              <td>
                                <span class="badge badge-outline badge-sm">
                                  {f.type}
                                </span>
                              </td>
                              <td class="max-w-xs truncate">{f.name}</td>
                              <td class="text-right">{f.capacity}</td>
                              <td class="text-right">
                                <span
                                  class={`badge badge-sm ${f.freeSpots && f.freeSpots > 0 ? "badge-success" : "badge-error"}`}
                                >
                                  {f.freeSpots ?? "-"}
                                </span>
                              </td>
                              <td class="text-right">
                                {typeof f.activeApplications === "number"
                                  ? formatNumber(f.activeApplications)
                                  : "-"}
                              </td>
                            </tr>
                          ))}
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              );
            })
          }
        </div>
      </div>
    </div>

    <!-- Pricing Comparison -->
    {
      pricingData.length > 0 && (
        <div class="card bg-base-100 shadow-xl mb-8">
          <div class="card-body">
            <h2 class="card-title mb-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
              Primerjava cen
            </h2>

            <div class="overflow-x-auto">
              <table class="table table-zebra">
                <thead>
                  <tr>
                    <th>Dom</th>
                    {Array.from({ length: maxRooms }).map((_, i) => (
                      <th class="text-center text-xs">
                        {i === 0
                          ? "Najcenejša"
                          : i === maxRooms - 1
                            ? "Najdražja"
                            : `${i + 1}. opcija`}
                      </th>
                    ))}
                    {/* <th class="text-center text-xs">Odbitek/dan</th> */}
                  </tr>
                </thead>
                <tbody>
                  {pricingData.map((facility) => (
                    <tr>
                      <td>
                        <div class="font-bold">{facility.name}</div>
                        <div class="text-xs text-base-content/60">
                          {facility.address.city}
                        </div>
                      </td>
                      {Array.from({ length: maxRooms }).map((_, i) => {
                        const room = facility.room_pricing[i];
                        return (
                          <td class="text-center">
                            {room ? (
                              <div
                                class="tooltip tooltip-bottom"
                                data-tip={room.room_type}
                              >
                                <div class="font-bold">
                                  {formatCurrency(room.monthly_rate)}
                                </div>
                                <div class="text-xs text-base-content/60">
                                  {formatCurrency(room.daily_rate)}/dan
                                </div>
                              </div>
                            ) : (
                              <span class="text-base-content/40">-</span>
                            )}
                          </td>
                        );
                      })}
                      {/* <td class="text-center font-bold text-success">
                        -{formatCurrency(facility.absence_deduction_daily)}
                      </td> */}
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>

            <div class="text-sm text-base-content/60 mt-4">
              <p>* Mesečna cena je izračunana na podlagi 30,417 dni.</p>
            </div>
          </div>
        </div>
      )
    }

    <!-- Footer -->
    <footer class="text-center text-base-content/50 text-sm py-8">
      <p>Podatki se samodejno posodabljajo dnevno.</p>
      <p class="mt-1">
        Vir: <a
          href={data._metadata.source}
          class="link link-hover"
          target="_blank"
          rel="noopener">{data._metadata.source}</a
        >
      </p>
      <p class="mt-1 text-xs">
        Zadnja posodobitev: {
          new Date(data._metadata.extractedAt).toLocaleString("sl-SI")
        }
      </p>
    </footer>
  </div>
</Layout>
